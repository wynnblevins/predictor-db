<?xml version="1.0" encoding="UTF-8"?> 
<databaseChangeLog 
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd"> 
  
  <property name="type.uuid" value="java.sql.Types.VARCHAR(36)" />

  <changeSet author="wblevins" id="1">    
    <createTable tableName="stream">
      <column name="id" type="${type.uuid}">
        <constraints nullable="false" unique="true" 
          primaryKey="true"/>
      </column>
      <column name="running" type="boolean" defaultValueBoolean="false">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
  
  <changeSet author="wblevins" id="2">
    <createTable tableName="stock">
      <column name="id" type="${type.uuid}">
        <constraints nullable="false" unique="true"
          primaryKey="true"/>
      </column>
      <column name="ticker" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="company" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="share_value" type="money">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet author="wblevins" id="3">
    <createTable tableName="term_stream">
      <column name="id" type="${type.uuid}">
        <constraints unique="true" nullable="false"/>
      </column>
      <column name="term_text" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="stream_id" type="varchar(36)">
        <constraints unique="true" references="stream(id)"
          foreignKeyName="stream_id"/>
      </column>
      <column name="stock_id" type="varchar(36)">
        <constraints unique="true" references="stock(id)" 
          foreignKeyName="stock_id"/>
      </column>
    </createTable>  
  </changeSet>
</databaseChangeLog> 